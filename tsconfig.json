{
  "compilerOptions": {
    "module": "node16",
    "moduleResolution": "node16",
    "target": "es2018",
    "lib": ["es2019"],
    "sourceMap": true,
    "newLine": "lf",
    "outDir": "lib",
    "rootDir": "src",
    "declaration": true,
    "esModuleInterop": true,
    "removeComments": false,
    "strict": true,
    "declarationMap": true,
    "allowJs": true,
    "verbatimModuleSyntax": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}
